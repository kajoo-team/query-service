{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "db"   : true,
    "bookshelfInstance" : true,
    "clear_database": true
  },
  "rules": {
    "eqeqeq": "off",
    "keyword-spacing": "error",
    "arrow-spacing": "error",
    "comma-spacing": "error",
    "object-curly-spacing": ["error", "always"],
    "space-in-parens": ["error", "never"],
    "require-yield": "error",
    "require-await": "error",
    "no-unexpected-multiline": "off",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ArrayExpression": 1,
        "ObjectExpression": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": [
      2,
      { "allow": ["warn", "error"] }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "require-jsdoc": ["error"],
    "valid-jsdoc": [
      "error",
      {
        "requireParamDescription": false
      }
    ]
  }
}